{
  "name": "@rust-companion/credentials-browser-extension",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost --config @parcel/config-webextension",
    "prebuild": "rimraf dist",
    "build": "parcel build src/manifest.json --config @parcel/config-webextension --no-source-maps",
    "proto:generate": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_opt=forceLong=bigint --ts_proto_opt=snakeToCamel=false --ts_proto_opt=useSnakeTypeName=false --ts_proto_out=./src/proto -I=./proto ./proto/*.proto",
    "lint": "biome check src",
    "lint:fix": "biome check src --apply"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@parcel/config-webextension": "^2.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@parcel/transformer-sass": "^2.12.0",
    "@types/chrome": "^0.0.266",
    "parcel": "^2.12.0",
    "protoc": "^1.1.3",
    "rimraf": "^5.0.5",
    "ts-proto": "^1.172.0"
  }
}
